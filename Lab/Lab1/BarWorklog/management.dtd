<!ELEMENT management (employee*, country*, profession*)>

<!ELEMENT country EMPTY>
<!ATTLIST country	country_id		ID		#REQUIRED
					country_name	CDATA	#REQUIRED
					nationality		CDATA	#REQUIRED>

<!ELEMENT employee (address*, phone*, email*, employment*)>
<!ATTLIST employee	employee_id	ID	#REQUIRED
